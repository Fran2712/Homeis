        <activity
            android:name=".ProfileScreen"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".SettingsScreen"
            android:theme="@style/AppThemeNoBar"/>

        <activity
            android:name=".ChatroomScreen"
            android:theme="@style/AppThemeNoBar" />
