<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="100dp"
    android:height="100dp"
    android:alpha="0.4"
    android:viewportWidth="100"
    android:viewportHeight="100"
    >

    <group>

        <clip-path
            android:pathData="M0 0H100V100H0V0Z"
            />

        <path
            android:pathData="M0 0V100H100V0"
            android:fillColor="#F92A82"
            />

        <group
            android:translateX="-0.5"
            android:translateY="0.5"
            android:pivotX="50"
            android:pivotY="50"
            android:scaleX="2.828"
            android:scaleY="2.828"
            android:rotation="-45"
            >

            <path
                android:pathData="M0 0V100H100V0"
                >

                <aapt:attr name="android:fillColor">

                    <gradient
                        android:type="linear"
                        android:startX="25"
                        android:startY="50"
                        android:endX="75"
                        android:endY="50"
                        >

                        <item
                            android:color="#D9FFCC69"
                            android:offset="0"
                            />

                        <item
                            android:color="#00FFFFFF"
                            android:offset="1"
                            />

                    </gradient>

                </aapt:attr>

            </path>

        </group>

    </group>

</vector>