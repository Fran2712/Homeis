<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="28dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="66dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="336dp"
        android:layout_height="177dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/shapecard3"
        android:backgroundTint="@color/design_default_color_background"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_txt_nec"
        android:layout_width="44dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:text="@string/txnec"
        android:textColor="@color/colorAccent4"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/TV_servicio"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/IMG_pfp" />

    <TextView
        android:id="@+id/TV_txt_desc"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:text="@string/txdesc"
        android:textColor="@color/colorAccent4"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/TV_pregunta"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/TV_txt_nec" />

    <TextView
        android:id="@+id/TV_txt_fecha"
        android:layout_width="35dp"
        android:layout_height="17dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:text="@string/txfecha"
        android:textColor="@color/colorAccent4"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/TV_fecha"

        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/TV_txt_desc" />

    <TextView
        android:id="@+id/TV_fecha"
        android:layout_width="215dp"
        android:layout_height="18dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/TV_pregunta" />

    <TextView
        android:id="@+id/TV_pregunta"
        android:layout_width="215dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/TV_servicio" />

    <TextView
        android:id="@+id/TV_servicio"
        android:layout_width="215dp"
        android:layout_height="18dp"
        android:layout_marginTop="64dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/TV_autor"
        android:layout_width="205dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        android:fontFamily="@font/overlock_bold"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/IMG_pfp"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="28dp" />

    <ImageView
        android:id="@+id/IMG_pfp"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/foto_perfil"
        android:elevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />
</androidx.constraintlayout.widget.ConstraintLayout>