<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="220dp" />

    <ImageView
        android:id="@+id/IMG_bg_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fullbg"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/vista_contenedor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorAccent6"

        android:elevation="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline33">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.511"
            tools:layout_editor_absoluteX="-55dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="28dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="28dp" />

            <ImageView
                android:id="@+id/IMG_ocultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="184dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu_on_surface_24dp"
                app:tint="@color/colorAccent7" />


            <TextView
                android:id="@+id/TV_necesi"
                android:layout_width="276dp"
                android:layout_height="39dp"
                android:elevation="4dp"
                android:fontFamily="@font/overlock_bold"
                android:text="@string/quenec"
                android:textColor="@color/colorAccent7"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.239"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.097" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                style="@style/Base.CardView"
                android:layout_width="152dp"
                android:layout_height="136dp"
                android:layout_marginTop="109dp"
                android:backgroundTint="@color/colorAmarillo"
                android:elevation="5dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">

                    <ImageView
                        android:id="@+id/IMG_herr"
                        android:layout_width="59dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginBottom="48dp"
                        android:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/herramientas"
                        app:tint="@color/colorAccent5" />

                    <TextView
                        android:id="@+id/TV_card_1"
                        android:layout_width="117dp"
                        android:layout_height="34dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/overlock"
                        android:text="@string/herr"
                        android:textColor="@color/colorAccent5"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                style="@style/Base.CardView"
                android:layout_width="152dp"
                android:layout_height="136dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorAccent2"
                android:elevation="5dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline9"
                app:layout_constraintEnd_toStartOf="@+id/card_3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintTop_toBottomOf="@+id/card_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">

                    <ImageView
                        android:id="@+id/IMG_preg"
                        android:layout_width="59dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginBottom="48dp"
                        android:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.979"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/preguntas"
                        app:tint="@color/colorAccent5"/>

                    <TextView
                        android:id="@+id/TV_card_2"
                        android:layout_width="87dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="99dp"
                        android:layout_marginEnd="41dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/overlock"
                        android:text="@string/preg"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent5"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                style="@style/Base.CardView"
                android:layout_width="152dp"
                android:layout_height="136dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorAccent3"
                android:elevation="5dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline9"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">

                    <ImageView
                        android:id="@+id/IMG_serv"
                        android:layout_width="59dp"
                        android:layout_height="55dp"

                        android:layout_marginStart="48dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginBottom="48dp"
                        android:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/servicios"
                        app:tint="@color/colorAccent5"/>

                    <TextView
                        android:id="@+id/TV_card_3"
                        android:layout_width="72dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="99dp"
                        android:layout_marginEnd="43dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/overlock"
                        android:text="@string/serv"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent5"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                style="@style/Base.CardView"
                android:layout_width="152dp"
                android:layout_height="136dp"
                android:layout_marginTop="109dp"
                android:backgroundTint="@color/colorPrimaryRosaClaro"
                android:elevation="5dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/card_1"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">

                    <ImageView
                        android:id="@+id/IMG_social"
                        android:layout_width="59dp"
                        android:layout_height="55dp"

                        android:layout_marginStart="48dp"
                        android:layout_marginTop="33dp"
                        android:layout_marginEnd="45dp"
                        android:layout_marginBottom="48dp"
                        android:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/social"
                        app:tint="@color/colorAccent5"/>

                    <TextView
                        android:id="@+id/TV_card_4"
                        android:layout_width="51dp"
                        android:layout_height="30dp"
                        android:elevation="5dp"
                        android:fontFamily="@font/overlock"
                        android:text="@string/soc"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent5"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.534"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="396dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_publicaciones"
        android:layout_width="match_parent"
        android:layout_height="616dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/IMG_bg_full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>