<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/custom_spinner"
    tools:context=".CreatePost">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="70dp" />

    <ImageView
        android:id="@+id/IMG_bg"
        android:layout_width="541dp"
        android:layout_height="313dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg"
        tools:srcCompat="@drawable/bg" />


    <TextView
        android:layout_width="240dp"
        android:layout_height="123dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/overlock_bold"
        android:text="@string/screen_title_create"
        android:textColor="@color/design_default_color_background"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vista_contenedor"
            android:layout_width="343dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="34dp"
            android:layout_weight="1"
            android:background="@drawable/shapecard"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_post_type"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:elevation="8dp"
            android:ems="10"
            android:hint="@string/select_type"
            android:inputType="text"
            app:boxBackgroundColor="@android:color/white"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:layout_constraintEnd_toEndOf="@+id/vista_contenedor"
            app:layout_constraintStart_toStartOf="@+id/vista_contenedor"
            app:layout_constraintTop_toTopOf="@+id/vista_contenedor" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="@+id/vista_contenedor"
            app:layout_constraintStart_toStartOf="@+id/vista_contenedor"
            app:layout_constraintTop_toBottomOf="@+id/spinner_post_type">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtedit_post_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="What are you offering?" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="@+id/vista_contenedor"
            app:layout_constraintStart_toStartOf="@+id/vista_contenedor"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Write a description" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_create_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:elevation="10dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/editTextDate"
            app:layout_constraintStart_toStartOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="271dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:elevation="8dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



